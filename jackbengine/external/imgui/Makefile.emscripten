CC                  = emcc

CFLAGS              = -Oz								\
                      -std=c++17						\
                      -s USE_SDL=2                      \
					  -s DEMANGLE_SUPPORT=1             \
                      -s WARN_ON_UNDEFINED_SYMBOLS=1

SOURCES             = imgui_widgets.cpp			\
                      imgui_draw.cpp			\
                      imgui_demo.cpp			\
                      imgui.cpp					\
                      imgui_impl_sdl.cpp		\
                      imgui_impl_opengl3.cpp

OUT                 = libimgui.bc

all:
	$(CC) $(CFLAGS) $(SOURCES) -o $(OUT)
